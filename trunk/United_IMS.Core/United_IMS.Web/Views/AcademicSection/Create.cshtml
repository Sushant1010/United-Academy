@model United_IMS.Web.Models.ACD_Section

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Academic Section Create</h1>
    <ol class="breadcrumb"><li class="list">@Html.ActionLink("List", "Index",null,new{@class="btn btn-xs btn-success"})</li></ol>
</section>

<section class="content">
<div class="box box-success">
<div class="box-body">
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
		<div class="col-sm-2">
            @Html.LabelFor(model => model.SectionName, new { @class = "control-label" })
            </div>
        <div class="col-sm-3">
            @Html.TextBoxFor(model => model.SectionName, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(model => model.SectionName, "", new { @class = "text-danger" })
            <b style="color:red">@ViewBag.CBMsg</b>
        </div>
        </div>

        <div class="form-group row">
		<div class="col-sm-2">
            @Html.LabelFor(model => model.SectionCode, new { @class = "control-label" })
            </div>
        <div class="col-sm-3">
            @Html.TextBoxFor(model => model.SectionCode, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SectionCode, "", new { @class = "text-danger" })
            <b style="color:red">@ViewBag.CBMsg</b>
        </div>
        </div>

		@*<div class="form-group row">
			<div class="col-sm-2">
				@Html.LabelFor(model => model.OrganizationId, new { @class = "control-label", required = "required" })
			</div>
			<div class="col-sm-3">
				@Html.DropDownList("OrganizationId", null, "-- Select --", new { @class = "form-control" })
			</div>
		</div>*@

        <div class="form-group row">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>

}
</div>
</div>
</section>
