<script>
    function showdiv(stype)
    {
        if (stype == "Y")
        {
            $("#Staff").show();
            $("#Student").hide();
        }
        else if (stype == "N")
        {
            $("#Staff").hide();
            $("#Student").show();
        }
        else
        {
            $("#Staff").show();
            $("#Student").show();
        }

    }
</script>