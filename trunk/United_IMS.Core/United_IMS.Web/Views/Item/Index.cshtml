@model IEnumerable<United_IMS.Web.ViewModel.ItemVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1>Item List</h1>
    <ol class="breadcrumb"><li class="list">@Html.ActionLink("Create", "Create", null, new { @class = "btn btn-xs btn-success" })</li></ol>
</section>
<section class="content">
    <div class="box box-success">
        <div class="box-body">
            <table class="table table-condensed table-bordered" id="example">
                <thead>
                    <tr>
                        <th>
                            Item
                        </th>
                        @*<th>
                            Item Code
                        </th>*@
                        <th>
                            Category
                        </th>
                        <th>
                            Organization Name
                        </th>

                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemName)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.ItemCode)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.OrganizationName)
                            </td>

                            <td>
                                @Html.ActionLink(" ", "Edit", new { id = item.ItemId }, new { @class = "fa fa-pencil text-primary", title = "Edit" }) |
                                @Html.ActionLink(" ", "Details", new { id = item.ItemId }, new { @class = "fa fa-list text-success", title = "Details" }) |
                                @Html.ActionLink(" ", "Delete", new { id = item.ItemId }, new { @class = "fa fa-trash-o text-danger", title = "Delete", onclick = "return confirm('Are you sure to Delete?')" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>


