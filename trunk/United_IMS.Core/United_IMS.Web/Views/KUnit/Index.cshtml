@model IEnumerable<United_IMS.Web.ViewModel.KUnitVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1>List Index</h1>
    <ol class="breadcrumb"><li class="list">@Html.ActionLink("Create", "Create", null, new { @class = "btn btn-xs btn-success" })</li></ol>
</section>
<section class="content">
    <div class="box box-success">
        <div class="box-body">
            <table class="table table-condensed table-bordered">
                <tr>
                    <th>
                        @Html.DisplayName("Unit Name")
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.UnitCode)
                        </th>*@
                    <th>
                        @Html.DisplayName("Organization Name")
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnitName)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.UnitCode)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.OrganizationName)
                        </td>
                        <td>
                            @Html.ActionLink(" ", "Edit", new { id = item.UnitId }, new { @class = "fa fa-pencil text-primary", title = "Edit" }) |
                            @Html.ActionLink(" ", "Details", new { id = item.UnitId }, new { @class = "fa fa-list text-success", title = "Details" }) |
                            @Html.ActionLink(" ", "Delete", new { id = item.UnitId }, new { @class = "fa fa-trash-o text-danger", title = "Delete", onclick = "return confirm('Are you sure to Delete?')" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</section>
