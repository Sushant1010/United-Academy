@model United_IMS.Web.Models.MS_AcademicYear

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Academic Year Create</h1>
    <ol class="breadcrumb">
        <li class="list">@Html.ActionLink("List", "Index", null, new { @class = "btn btn-xs btn-success" })</li>
    </ol>
</section>

<section class="content">
<div class="box box-success">
<div class="box-body">
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            <div class="col-sm-2">
                <label class = "control-label">Accademic Year</label>

            </div>
			<div class="col-sm-3">
                @Html.TextBoxFor(model => model.AcademicYearName,  new { @class = "form-control", required = "required" } )
                @Html.ValidationMessageFor(model => model.AcademicYearName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
		<div class="col-sm-2">
            <label class="control-label">Start Dater</label>
            </div>
			<div class="col-sm-3">
                @Html.TextBoxFor(model => model.StartDate,"{0:yyyy-MM-dd}",  new { @class = "form-control",placeholder="YYYY-MM-DD", required = "required" } )
                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
		<div class="col-sm-2">
            <label class="control-label">End Dater</label>
            </div>
			<div class="col-sm-3">
                @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-dd}",  new { @class = "form-control", placeholder = "YYYY-MM-DD", required = "required" } )
                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-2">
                <label class="control-label">Is Current</label>
            </div>
			<div class="col-sm-3">
                <div class="checkbox">
                    @Html.RadioButton("IsCurrent","Y",true)<span>&nbsp;&nbsp;&nbsp;Yes&nbsp;&nbsp;&nbsp;</span>
					@Html.RadioButton("IsCurrent", "N", false)<span>&nbsp;&nbsp;&nbsp;No</span>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>

}
</div>
</div>
</section>
