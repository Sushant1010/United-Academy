		//	location = 0;
		//}
		//if (department == '') {
		//	department = 0;
		//}
		//if (unit == '') {
		//	unit = 0;
		//}

		$("#divLoader").show();  
		$.ajax({
			type: "POST",
			data: {  id: batch, Check: check },
			url: '@Url.Action("GetStudentByBatchId", "AcademicStudent")',
			success: function (data) {
				$("#divLoader").hide();  
				$('#StudentId').empty();
                $('#StudentId').append(data);
